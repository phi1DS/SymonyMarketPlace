{% extends 'base.html.twig' %}

{% block title %}Create Product{% endblock %}

{% block nav %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_account') }}">Account</a>
        </div>
    </nav>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Create a Product</h4>
                </div>
                <div class="card-body">

                    {{ form_start(createProductFrom) }}

                        <div class="mb-3">
                            {{ form_label(createProductFrom.name) }}
                            {{ form_widget(createProductFrom.name, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(createProductFrom.name) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(createProductFrom.price) }}
                            {{ form_widget(createProductFrom.price, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(createProductFrom.price) }}
                        </div>

                        <button type="submit" class="btn btn-success w-100">Create</button>

                    {{ form_end(createProductFrom) }}

                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}